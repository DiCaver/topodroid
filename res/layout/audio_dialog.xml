<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    style="@style/base_padding"
    android:layout_width="match_parent" 
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView android:id="@+id/audio_id"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginv"
    />

    <LinearLayout 
      android:layout_width="match_parent" 
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/marginv"
      android:orientation="horizontal" 
      >
      <LinearLayout android:id="@+id/layout2"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginv"
        android:orientation="horizontal" 
	/>
      <Button android:id="@+id/audio_confirm"
        style="@style/button_default"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_marginTop="@dimen/marginv"
        android:layout_marginLeft="@dimen/marginh" 
        android:layout_marginRight="@dimen/marginh" 
        />
    </LinearLayout>

    <LinearLayout android:id="@+id/help"
      android:layout_width="match_parent" 
      android:layout_height="wrap_content"
      android:orientation="horizontal" 
      android:layout_gravity="right"
      android:gravity="left"
      android:layout_marginTop="@dimen/marginvbig" 
      >
      <Button android:id="@+id/button_help"
          style="@style/button_empty"
          android:text="@string/button_help"
      />
      <LinearLayout 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:gravity="right"
        >
        <!-- Button android:id="@+id/audio_delete"
            android:layout_marginRight="@dimen/marginh" 
            style="@style/button_default"
            android:text="@string/button_delete"
        / -->
        <Button android:id="@+id/audio_close"
            style="@style/button_default"
            android:text="@string/button_close"
        />
      </LinearLayout>
    </LinearLayout>
   					  
</LinearLayout>
